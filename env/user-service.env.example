# User Service Environment Configuration Template
# Copy this file to env/user-service.env and fill in the actual values

NODE_ENV=development
PORT=4001

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/tms_user

# JWT Configuration
# Generate new keys using: openssl genrsa -out keys/jwt-private.pem 2048
JWT_KID=your-key-id-here
JWT_ISSUER=yatms-user-service-dev
JWT_PRIVATE_KEY_PEM="-----BEGIN RSA PRIVATE KEY-----
YOUR_PRIVATE_KEY_HERE
-----END RSA PRIVATE KEY-----"
JWT_PUBLIC_KEY_PEM="-----BEGIN PUBLIC KEY-----
YOUR_PUBLIC_KEY_HERE
-----END PUBLIC KEY-----"

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=tms-user-service
