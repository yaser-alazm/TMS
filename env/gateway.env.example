# Gateway Service Environment Configuration Template
# Copy this file to env/gateway.env and fill in the actual values

NODE_ENV=development
PORT=4000

# Client URL for CORS
CLIENT_URL=http://localhost:3000

# Service URLs
USER_SERVICE_URL=http://localhost:4001
VEHICLE_SERVICE_URL=http://localhost:4002
GPS_SERVICE_URL=http://localhost:4003
TRAFFIC_SERVICE_URL=http://localhost:4004

# JWT Configuration (Get from User Service JWKS endpoint)
JWT_ISSUER=yatms-user-service-dev
JWKS_URL=http://localhost:4001/.well-known/jwks.json

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=tms-gateway
